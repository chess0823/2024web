<script type="text/javascript">

function check(){
	//alert("dfdfdfdf");
	let frm = document.frm;
//	alert(frm);
	let gender = frm.gender;
	//alert(gendr.length);
	
	
	//gender[0].checked;
	//gender[1].checked;
	//gender[2].checked;
	
	let flag=false;
	for(let i=0; i< gender.length; i++){
		if(gender[i].checked){
			flag=true;
			break; 
		}
	}
	
	if(flag == false){
		alert("선택");
	}else{
		//true
		frm.submit();
	}
}
</script>

